  <!--CSS PROPIOS-->
  <link href="/css/style.css" rel="stylesheet" />
  <link href="/css/jdSlider.css" rel="stylesheet" />
  <link href="/css/header.css" rel="stylesheet" />
   <link href="/css/footer.css" rel="stylesheet" />

<!-- CSS EXTERNOS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Bebas+Neue&family=Kalam&family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- PLUGINS DE JS -->
  <script src="https://kit.fontawesome.com/22284035c9.js" crossorigin="anonymous"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="/js/jdSlider.js"></script>

</head>

<body>
  <header class="main-header">
    <div class="menu">
      <div class="copy-header">
        <img src="/img/logo-rayas.png" alt="Logo de se juega?" class="logo">

        <a href="#" class="menu-hamburguesa">
          <i class="fa-solid fa-bars"></i>
      </a>

        <div class="menu-cont">
          <a class="txtNav1" href="/login/loginPlayer">Iniciar sesión jugador</a>
          <a class="txtNav1" href="/login/loginCourt">Iniciar sesión cancha</a>
          <a class="txtNav2" href="/register">Registrarse</a>
          <a class="txtNav3" href="/sobreNosotros">Sobre Nosotros</a>
        </div>
      </div>
    </div>
  </header>

  <div class="container-fluid p-0 bajar-slider">
    <section class="jd-slider slideshow">
      <div class="slide-inner">
        <ul class="slide-area">
          <li>
            <img src="/img/baner/slide01.jpg">
          </li>
          <li>
            <img src="/img/baner/slide02.jpg">
          </li>
          <li>
            <img src="/img/baner/slide03.jpg">
          </li>
          <li>
            <img src="/img/baner/slide04.jpg">
          </li>
        </ul>
      </div>

      <a class="prev" href="#">
        <i class="fas fa-angle-left fa-2x text-white pl-3"></i>
      </a>
      <a class="next" href="#">
        <i class="fas fa-angle-right fa-2x text-white pr-3"></i>
      </a>
    </section>

  </div>

  <main class="main-home">
    <div class="principal-home">
      <div class="jugador-home">    
        <div class="player_mobile">
          <p> <span class="titulito-home1"> Si sos jugador podés:</span></p>
          <ol>
            <li><a href="/register" class="home_info" > Armar tu perfil de jugador</a></li>
            <li class="home_info">Formar o sumarte a un equipo</li>
            <li><a href="/elegirCancha" class="home_info" class="home_info">Encontrar tu cancha más cercana</a> </li>
            <li class="home_info">Y a jugar!!!</li>
          </ol>        
          </div>
        <div class="imagen-jugador imagen-jugador-fondo">
          <div >
            <img src="/img/jugador-home.jpg" alt="imagen-jugador" class="image_lucas">
          </div>
          <div class="datos-lucas" > 
            <p class="titulito-home"  >Lucas Díaz</p>             
            <p class="cita-lucas" class="home_info"> "Nunca me quedo con las ganas de jugar un partido"</p>
          </div>
        </div>
      </div>

      <div class="cancha-home">
        <div class="player_mobile2">
          <p><span class="titulito-home2">Si sos dueño de cancha podés:</span></p>
          <ol>
            <li class="home_info">Registrar tu cancha</li>
            <li class="home_info">Ofrecer tus servicios</li>
            <li class="home_info">Crear torneos</li>
          </ol>  
          <div class="imagen-cancha imagen-cancha-fondo">
            <img src="/img/img-canchas/cancha-home.jpg" alt="imagen-cancha" class="image_field">
          </div>      
        </div>
        
      </div>

    </div>

    <div class="publicidades">
      <img src="/img/publicidad/publicidad.png" alt="imagen publicitaria" class="img-publicidad1">
      <img src="/img/publicidad/publicidad1.png" alt="imagen publicitaria" class="img-publicidad2">
    </div>

  <section class="seccion-mapa">
      <div class="recuadro-mapa">
        <div class="titulo-mapa">Encontrá nuestras canchas:</div>
        <iframe class="mapa" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d13137.528426543311!2d-58.40592325!3d-34.59449805!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2sar!4v1656256043937!5m2!1ses-419!2sar" 
        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </section>
  </main>
 
  <%- include('../footer') %>

  <script src="/js/script.js"></script>
</body>

</html>