<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Torneo</title>

    <!--CSS PROPIOS-->
    <link rel="stylesheet" href="/css/registrarCancha.css">
    <link rel="stylesheet" href="/css/reservarCancha.css">
    <link rel="stylesheet" href="/css/globalForm.css">
    <!-- CSS EXTERNOS -->
    <link
        href="https://fonts.googleapis.com/css2?family=Bangers&family=Bebas+Neue&family=Kalam&family=Roboto&display=swap"
        rel="stylesheet">
</head>

<body>
    <main>
        <form action="/userOwner/vistaCancha/:id/editTorneo/<%= torneos.id %>?_method=PATCH" method="POST"
            enctype="multipart/form-data">
            <div class="tarjeta">
                <div class="item-tarjeta">
                    <label>Deporte:</label>
                    <select id="deporte" name="deporte" required>
                        <% deportes.forEach(deportes => { %>
                        <option value="<%= deportes.id %>"
                            <% if (torneos.deporteT.id == deportes.id) { %><%= 'selected'  %><% }; %>>
                            <%= deportes.deporte %>
                        </option>
                        <% }); %>
                    </select>
                </div>

                <div class="edad">
                    <div style="display:none">
                        <input name="category" value="torneo" type="text">
                    </div>
                </div>

                <div class="item-tarjeta">
                    <label>Cantidad de Equipos:</label>
                    <input name="cantidadEquipos" type="number" value="<%= torneos.cantidad_equipos %>">
                </div>

                <div class="edad">
                    <div class="item-tarjeta">
                        <label>Categoría:</label>
                        <input name="categoria" type="number" value="<%= torneos.categoria %>">
                    </div>

                </div>

                <div class="item-tarjeta">
                    <label>Género:</label>
                    <select name="genero" id="genero" required>
                        <% genero.forEach(genero => { %>
                        <option value="<%= genero.id %>"
                            <% if (torneos.genero.id == genero.id) { %><%= 'selected'  %><% }; %>>
                            <%= genero.genero %>
                        </option>
                        <% }); %>
                    </select>
                </div>

                <div class="item-tarjeta">
                    <label>Fecha del torneo</label>
                    <br>
                    <br> Desde:
                    <input name="fechaInicio" type="date" value="<%=torneos.fecha_inicio%>">
                    <br>
                    <br>
                    Hasta: <input name="fechaFinal" type="date" value="<%=torneos.fecha_fin%>">
                </div>

                <div class="otro-item-tarjeta">
                    <div class="item-tarjeta"><label>Día y horario a realizarse:</label></div>
                    <select name="dia" id="dia">
                        <% dias.forEach(dias => { %>
                        <option value="<%= dias.id %>"
                            <% if (torneos.diahora.dias_id == dias.id) { %><%= 'selected'  %><% }; %>>
                            <%= dias.dia %>
                        </option>
                        <% }); %>
                    </select>
                     <select name="hora" id="hora">
                         <% horarios.forEach(horarios => { %>
                         <option value="<%= horarios.id %>"
                             <% if (torneos.diahora.horas_id == horarios.id) { %><%= 'selected'  %><% }; %>>
                             <%= horarios.hora %>
                         </option>
                         <% }); %>
                     </select>
                </div>
                <div class="item-tarjeta">
                    <label>Valor por equipo:</label>
                    <input type="number" name="valor" placeholder="$" value="<%= torneos.valor %>">
                </div>
                <div class="item-tarjeta">
                    <label>Premio</label>
                    <input type="number" name="premio" placeholder="$" value="<%= torneos.premio %>">
                </div>
                <div class="item-tarjeta">
                    <label>Cargar imagen</label>
                    <input class="foto" type="file" name="image" accept="all" value="<%= torneos.img_t %>">
                    <label> <img style="width: 130px; margin-top: 40px; border-radius: 70px;"
                            src="/img/products/<%= torneos.img_t%>">
                    </label>
                    <h6 style="margin-left: 20px; color: red">Imagen seleccionada </h6>
                </div>
                <div class="item-tarjeta boton-enviar">
                    <button type="submit">Modificar</button>
                </div>
            </div>
        </form>
    </main>
    <div class="item-tarjeta boton-enviar2">
        <a href="/userOwner/vistaCancha/<%= userOwnerLogged.id %>"><button type="submit">Volver</button></a>
    </div>
</body>

</html>