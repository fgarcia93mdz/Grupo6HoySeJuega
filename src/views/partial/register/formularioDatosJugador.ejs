<body>
  <div class="contenedor-general">
    <div class="contenedor-imagen">
      <div class="logo">
        <img src="/img/logo-fondo-transparente.png" alt="">
      </div>
    </div>

    <div class="formulario-div">
      <form class="div1" action="/register/registerPlayer" method="POST" enctype="multipart/form-data">
        <h1>Registro de datos personales</h1>
        <div class="form-group">
          <div class="input-group">
            <div class="horizontal">
              <div class="entre-divs">
                <label for="nombre">Nombre: </label>
                <input type="text" class="form-control <%= locals.errors && errors.nombre ? 'is-invalid' : null %>" id="nombre" name="nombre" value="<%= locals.oldData ? oldData.nombre : null %>">
                <% if (locals.errors && errors.nombre) { %>
                  <div class="text-danger msg">
                    <%= errors.nombre.msg %> 
                  </div>
               <% } %>
              </div>
              <br>
              <div class="entre-divs">
                <label for="apellido">Apellido:</label>
                <input type="text" class="form-control <%= locals.errors && errors.apellido ? 'is-invalid' : null %>" id="apellido" name="apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
                <% if (locals.errors && errors.apellido) { %>
                  <div class="text-danger msg">
                    <%= errors.apellido.msg %> 
                  </div>
                <% } %>
              </div>
           </div>            
            <br>

            <div class="horizontal">
              <div class="entre-divs">
                <label for="email">Mail: </label>
                <input id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" name="email" type="email" value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                  <div class="text-danger msg">
                    <%= errors.email.msg %> 
                  </div>
                <% } %>
              </div>
              <br>
              <div class="entre-divs">
                <label for="contraseña" >Contraseña: </label>
                <input id="pwd" name="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>" type="password">
                <% if (locals.errors && errors.password) { %>
                  <div class="text-danger msg">
                    <%= errors.password.msg %> 
                  </div>
                <% } %>
              </div>
            </div>
            <br>

            <div class="horizontal">
              <div class="entre-divs">
                <label for="telefono">Telefono:</label>
                <input type="number" class="form-control <%= locals.errors && errors.telefono ? 'is-invalid' : null %>" id="telefono" name="telefono" value="<%= locals.oldData ? oldData.telefono : null %>">
                <% if (locals.errors && errors.telefono) { %>
                  <div class="text-danger msg">
                    <%= errors.telefono.msg %> 
                  </div>
                <% } %>
              </div>
              <br>
              <div class="entre-divs">
                <label for="telefono2">Contacto de emergencia:</label>
                <input type="number" class="form-control" id="telefono2" name="telefono2">
              </div>
            </div>
            <br>

            <div class="horizontal">
              <div class="entre-divs">
                <label for="edad">Edad:</label>
                <input type="number" class="form-control <%= locals.errors && errors.edad ? 'is-invalid' : null %>" id="edad" name="edad" value="<%= locals.oldData ? oldData.edad : null %>">
                <% if (locals.errors && errors.edad) { %>
                  <div class="text-danger msg">
                    <%= errors.edad.msg %> 
                  </div>
                <% } %>
              </div>
              <br>
              <div class="entre-divs">
                <label for="categoria">Posición:</label>
                <input type="text" class="form-control <%= locals.errors && errors.categoria ? 'is-invalid' : null %>" id="categoria" name="categoria" value="<%= locals.oldData ? oldData.categoria : null %>">
                <% if (locals.errors && errors.categoria) { %>
                  <div class="text-danger msg">
                    <%= errors.categoria.msg %> 
                  </div>
                <% } %>
              </div>
            </div>
            <br>

            <div class="horizontal">
              <div class="entre-divs">
                <label for="autoValoracion">Auto valoración:</label>
                <br>
